<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.Activities"
              Title="Actividades">
    <ContentPage.ToolbarItems>
    <ToolbarItem Name="MenuItem1" Order="Primary" Icon="add.png" Text="Add" Priority="0" Activated="OnclickNewActivity" />
    <!--<ToolbarItem Name="MenuItem2" Order="Primary" Icon="home.png" Text="Item 2" Priority="1" />-->
</ContentPage.ToolbarItems>
    <ListView x:Name="listView"
               Margin="10"
              ItemTapped="OnItemTapped"
              IsPullToRefreshEnabled="true"
              RowHeight="60"
              SeparatorVisibility="Default"
              SeparatorColor="Gray"
              ItemsSource="{Binding .}" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Label Text="{Binding .}" TextColor="Black" FontSize="Medium" Margin="10"/>
                <!--<Label Text="{Binding State, StringFormat='{0}'}" TextColor="Gray" FontSize="Small" Margin="5"/>
                <Label Text="{Binding Id, StringFormat='{0}'}" TextColor="Gray" FontSize="Small" Margin="5"/>-->
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>

