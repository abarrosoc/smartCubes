<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.View.Login.LoginView">
     <StackLayout BackgroundColor="White">
        <Label TextColor="#0E547C" HorizontalOptions="CenterAndExpand" FontSize = "67" Text="App" Margin="0,100,0,10" />
        
        <Entry Placeholder="Usuario" HorizontalOptions="StartAndExpand" Text="{Binding User}" Margin="60,100,30,10" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="250" HorizontalOptions="Center" Margin="0,0,0,25"/>

        <Entry Placeholder="Introduzca contraseÃ±a" HorizontalOptions="StartAndExpand" Text="{Binding Password}" IsPassword="true" Margin="60,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="250" HorizontalOptions="Center" Margin="0,0,0,15"/>

        <Button Text="Entrar"
                VerticalOptions="StartAndExpand"
                HorizontalOptions="FillAndExpand"
                Command="{Binding LoginCommand}" 
                BackgroundColor="#0E547C"
                TextColor="White"
                FontSize="20"
                Margin="60,40,60,0" />
     </StackLayout>
</ContentPage>
