<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.View.Login.LoginView">
     <StackLayout BackgroundColor="White" HorizontalOptions="CenterAndExpand" WidthRequest="400">
        <Label TextColor="#3FC49A" HorizontalOptions="CenterAndExpand" FontSize = "67" Text="App" Margin="0,100,0,10" />
        <StackLayout BackgroundColor="White" HorizontalOptions="CenterAndExpand" WidthRequest="300">
            <Entry Placeholder="Usuario" HorizontalOptions="StartAndExpand" Text="{Binding User}" Margin="0,100,30,10" Keyboard="Text"/>
            <BoxView HeightRequest="0.5" BackgroundColor="Silver" HorizontalOptions="FillAndExpand" Margin="0,0,0,25"/>

            <Entry Placeholder="Introduzca contraseña" HorizontalOptions="FillAndExpand" Text="{Binding Password}" IsPassword="true" Keyboard="Text"/>
            <BoxView HeightRequest="0.5" BackgroundColor="Silver" HorizontalOptions="FillAndExpand" Margin="0,0,0,15"/>

            <Button Text="Entrar"
                    VerticalOptions="StartAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding LoginCommand}" 
                    BackgroundColor="#3FC49A"
                    TextColor="White"
                    FontSize="20"
                    Margin="0,40,0,0" />
        </StackLayout>
     </StackLayout>
</ContentPage>
