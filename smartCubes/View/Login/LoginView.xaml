<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.View.Login.LoginView">
     <StackLayout BackgroundColor="White">
        <Label TextColor="Black" HorizontalOptions="StartAndExpand" FontSize = "17" Text="Usuario" Margin="60,250,30,10" />
        <Entry Placeholder="Introduzca usuario" HorizontalOptions="CenterAndExpand" Text="{Binding User}" Margin="30,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="250" HorizontalOptions="Center" Margin="0,0,0,25"/>

        <Label TextColor="Black" HorizontalOptions="StartAndExpand" FontSize = "17" Text="Contraseña" Margin="60,0,30,10"/>
        <Entry Placeholder="Introduzca contraseña" HorizontalOptions="StartAndExpand" Text="{Binding Password}" IsPassword="true" Margin="30,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="250" HorizontalOptions="Center" Margin="0,0,0,15"/>

        <Button Text="Entrar"
                VerticalOptions="StartAndExpand"
                HorizontalOptions="FillAndExpand"
                Command="{Binding SaveCommand}" 
                BackgroundColor="#0E547C"
                TextColor="White"
                FontSize="20"
                Margin="30,30,30,0" />
    </StackLayout>
</ContentPage>
