<?xml version="1.0" encoding="UTF-8"?>
<popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                 x:Class="smartCubes.View.DevicesPopupView">
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="0" Margin="0">
    <Frame Margin="25" Padding="20">
      <ListView x:Name="lDevices"
               Margin="0"
              ItemTapped="OnItemTapped"
              IsPullToRefreshEnabled="true"
              RowHeight="75"
              SeparatorVisibility="Default"
              SeparatorColor="Gray"
              ItemsSource="{Binding DevicesList, Mode=TwoWay}" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Label Text="{Binding Name, Mode=TwoWay}" TextColor="Black" FontSize="Medium" Margin="4"/>
                <Label Text="{Binding State, Mode=TwoWay, StringFormat='{0}'}" TextColor="Gray" FontSize="Small" Margin="1"/>
                <Label Text="{Binding Id, Mode=TwoWay, StringFormat='{0}'}" TextColor="Gray" FontSize="Small" Margin="1"/>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </Frame>
  </StackLayout>
</popup:PopupPage>
