                            <TableRoot>

                                <TableSection Title="Mensaje">
                                    <ViewCell Height="180">
                                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Margin="20,0">
                                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="20,0">
                                                <StackLayout Orientation="Vertical" HorizontalOptions="Start">
                                                    <Label Text="Descripción" TextColor="#657786" FontSize="Medium" Margin="0,40,30,0" />
                                                </StackLayout>
                                                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                                                    <Entry TextColor="Black" Text="{Binding Description}" Margin="0,20,0,0" MaxLength="30" HorizontalOptions="FillAndExpand" Keyboard="Text" />
                                                    <BoxView HeightRequest="0.5" BackgroundColor="Silver" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" />
                                                </StackLayout>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="20,0">
