<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.View.Session.NewSessionView">
   <StackLayout BackgroundColor="White">
        <Label TextColor="Black" FontSize = "17" Text="Nombre" Margin="30,40,30,10" />
        <Entry Placeholder="Nombre" Margin="30,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="320" HorizontalOptions="Center" Margin="0,0,0,15"/>

        <Label TextColor="Black" FontSize = "17" Text="Descripción" Margin="30,0,30,10"/>
        <Entry Placeholder="Descripción" Margin="30,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="320" HorizontalOptions="Center" Margin="0,0,0,15"/>

               <Label TextColor="Black" FontSize = "17" Text="Descripción" Margin="30,0,30,10"/>
        <Picker x:Name="picker" Title="Actividad" Margin="30,0,30,10">
          <Picker.ItemsSource>
            <x:Array Type="{x:Type x:String}">
              <x:String>Actividad 1</x:String>
              <x:String>Actividad 2</x:String>
              <x:String>Actividad 3</x:String>
            </x:Array>
          </Picker.ItemsSource>
        </Picker>
    </StackLayout>
</ContentPage>
