                <Entry Placeholder="Introduzca el código" Text="{Binding StudentCode}" Margin="0,0,0,0" Keyboard="Text" Grid.Row="4" Grid.Column="1" />
                <BoxView HeightRequest="0.5" BackgroundColor="Silver" HorizontalOptions="FillAndExpand" Margin="0,0,0,35" Grid.Row="5" Grid.Column="0" />
            </StackLayout>
        </AbsoluteLayout>
