        <AbsoluteLayout AbsoluteLayout.LayoutBounds=".5,.95,.7,.07" AbsoluteLayout.LayoutFlags="All">
            <Button Text="{Binding StartStop}" CornerRadius="10" BackgroundColor="#657786" FontSize="20" TextColor="White" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" Command="{Binding TimerCommand}" />
        </AbsoluteLayout>
        <StackLayout IsVisible="{Binding Loading}" Padding="12" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1">
