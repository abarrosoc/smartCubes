<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.View.Session.PlaySessionView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItem1" Order="Primary" Icon="share.png" Text="Add" Priority="0" Clicked="OnclickShareSession" />
        <!--<ToolbarItem Name="MenuItem2" Order="Primary" Icon="home.png" Text="Item 2" Priority="1" />-->
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="Actividad 1" HorizontalOptions="CenterAndExpand" TextColor="#0E547C" FontSize="Large" Margin="0,90,0,0"/>
        <Label Text="Alumno 2345X" HorizontalOptions="CenterAndExpand" TextColor="#0E547C" FontSize="Large" Margin="0,10"/>
        <Frame  CornerRadius = "120"
            HeightRequest = "250"
            WidthRequest = "250"
            BackgroundColor="#0E547C"
            HorizontalOptions = "CenterAndExpand"
            VerticalOptions = "CenterAndExpand"
            Margin = "0"
            Padding ="0"> 
            <Label Text="00:00:00" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" TextColor="White" FontSize="50" Margin="0,90"/>
        </Frame>
        <Button Text="Comenzar" BackgroundColor="#0E547C" FontSize="Large" TextColor="White" VerticalOptions="EndAndExpand" Margin="30,40"/>
    </StackLayout>
</ContentPage>
