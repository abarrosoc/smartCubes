<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="smartCubes.View.Session.PlaySessionView"
             Title="{Binding Title}">
    <StackLayout>
        <Label TextColor="#0E547C" FontSize = "20" Text="Actividad" Margin="30,30,30,10" />
        <Entry Text="{Binding ActivityName}" TextColor="Silver" IsEnabled="false" Margin="30,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="320" HorizontalOptions="Center" Margin="0,0,0,25"/>
        
        <Label TextColor="#0E547C" FontSize = "20" Text="Código alumno" Margin="30,10,30,10" />
        <Entry Placeholder="Introduzca el código" IsEnabled="{Binding StudentCodeEntry}" Text="{Binding StudentCode}" Margin="30,0,30,0" Keyboard="Text"/>
        <BoxView HeightRequest="0.5" BackgroundColor="Silver" WidthRequest="320" HorizontalOptions="Center" Margin="0,0,0,35"/>

        <Frame CornerRadius = "120"
            HeightRequest = "250"
            WidthRequest = "250"
            BackgroundColor="#0E547C"
            HorizontalOptions = "CenterAndExpand"
            VerticalOptions = "CenterAndExpand"
            Margin = "0"
            Padding ="0">
            <StackLayout Orientation="Horizontal" >
              <Label Text="{Binding Minutes}" VerticalOptions="Center" TextColor="White" FontSize="50" Margin="8,0,0,0"/>
              <Label Text=":" TextColor="White" VerticalOptions="Center" FontSize="50"/>
              <Label Text="{Binding Seconds}" VerticalOptions="Center" TextColor="White" FontSize="50" />
              <Label Text=":" TextColor="White" VerticalOptions="Center" FontSize="50"/>
              <Label Text="{Binding Milliseconds}" VerticalOptions="Center" TextColor="White" FontSize="50"/>
            </StackLayout>
        </Frame>
        <Button Text="{Binding StartStop}" 
                BackgroundColor="#0E547C" 
                FontSize="Large" 
                TextColor="White" 
                VerticalOptions="EndAndExpand" 
                Margin="30,40"
                Command="{Binding TimerCommand}"/>
    </StackLayout>
</ContentPage>
